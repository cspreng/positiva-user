@model IEnumerable<PositivaMvc.Models.Empresa>

@{
    ViewData["Title"] = "Empresas";
}

<h2>Empresas</h2>

<p>
    <a asp-action="Create" class="btn btn-default">Criar Nova Empresa</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Lista de Empresas
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CadastroEmpresa)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edita</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
