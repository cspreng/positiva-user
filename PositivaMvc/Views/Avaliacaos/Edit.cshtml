@model PositivaMvc.Models.ViewModels.AvaliacaoFormViewModel
@{
    ViewData["Title"] = "Editar Avaliação";
}

<h2>@ViewData["Title"] </h2>

<h4>Colaborador</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input type="hidden" asp-for="Avaliacao.Id" />
            <div class="form-group">
                <label asp-for="Avaliacao.Feedback" class="control-label"></label>
                <input asp-for="Avaliacao.Feedback" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Avaliacao.ColaboradorId" class="control-label">Nome Colaborador</label>
                <select asp-for="Avaliacao.ColaboradorId" asp-items="@(new SelectList(Model.Colaboradors,"Id","NomeColaborador"))" class="form-control"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}