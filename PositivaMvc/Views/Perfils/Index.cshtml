@model IEnumerable<PositivaMvc.Models.Perfil>

@{
    ViewData["Title"] = "Perfil";
}

<h2>Perfil</h2>

<p>
    <a asp-action="Create" class="btn btn-default">Criar Novo Perfil</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Lista de Perfis
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TipoPerfil)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edita</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
