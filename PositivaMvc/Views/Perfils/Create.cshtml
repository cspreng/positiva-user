@model PositivaMvc.Models.Perfil

@{
    ViewData["Title"] = "Create";
}

<h2>Criar</h2>

<h4>Cadastro Perfil</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TipoPerfil" class="control-label">Nome do Perfil</label>
                <input asp-for="TipoPerfil" class="form-control" />
                <span asp-validation-for="TipoPerfil" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
