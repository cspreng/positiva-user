@model PositivaMvc.Models.ViewModels.PerguntaFormViewModel
@{
    ViewData["Title"] = "Cadastrar Pergunta";
}

<h2>@ViewData["Title"] </h2>

<h4>Colaborador</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="Pergunta.Carisma" class="control-label"></label>
                <input asp-for="Pergunta.Carisma" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Pergunta.GrupoPerguntasId" class="control-label">Grupo Perguntas</label>
                <select asp-for="Pergunta.GrupoPerguntasId" asp-items="@(new SelectList(Model.GrupoPerguntass,"Id","Habilidade"))" class="form-control"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Voltar para Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}