
@model IEnumerable<PositivaMvc.Models.Colaborador>


@{
    ViewData["Title"] = "Colaboradores";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-default">Criar Colaborador</a>
</p>

<table class="table table-hover">
    <thead>
        <tr>
            <th>
                Nome do Colaborador
            </th>            
            <th></th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
            {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomeColaborador)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Deletar</a>
            </td>
        </tr>
            }
    </tbody>


</table>

